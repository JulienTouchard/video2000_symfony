{% extends 'base.html.twig' %}

{% block title %}Film index{% endblock %}

{% block body %}
    <img class="biquette" src="{{ asset('img/biquette.jpg') }}">
    
    <h1>Film index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Description</th>
                <th>Cast</th>
                <th>Author</th>
                <th>Rating</th>
                <th>Poster</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for film in films %}
            <tr>
                <td>{{ film.id }}</td>
                <td>{{ film.title }}</td>
                <td>{{ film.description }}</td>
                <td>{{ film.cast }}</td>
                <td>{{ film.author }}</td>
                <td>{{ film.rating }}</td>
                <td>{{ film.poster }}</td>
                <td>
                    <a href="{{ path('film_show', {'id': film.id}) }}">show</a>
                    <a href="{{ path('film_edit', {'id': film.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="8">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('film_new') }}">Create new</a>
{% endblock %}
