{% extends 'base.html.twig' %}

{% block title %}Film{% endblock %}

{% block body %}
    <h1>Film</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ film.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ film.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ film.description }}</td>
            </tr>
            <tr>
                <th>Cast</th>
                <td>{{ film.cast }}</td>
            </tr>
            <tr>
                <th>Author</th>
                <td>{{ film.author }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ film.rating }}</td>
            </tr>
            <tr>
                <th>Poster</th>
                <td>{{ film.poster }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('film_index') }}">back to list</a>

    <a href="{{ path('film_edit', {'id': film.id}) }}">edit</a>

